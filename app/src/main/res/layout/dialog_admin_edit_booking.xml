<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/text_view_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Status Booking"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_booking_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Booking #123 oleh Budi"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status Booking"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spinner_booking_status"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Status Pembayaran"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spinner_payment_status"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

</LinearLayout>
